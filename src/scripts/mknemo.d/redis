#! /usr/bin/env bash
#
#   note that redis needs -I$NEMO/opt/include/hiredis
#
#   where is valkey's  PROG_SUFFIX="_nemo" 

url=https://github.com/redis/hiredis
version=git


cd $NEMO/local
if [ ! -d hiredis ]; then
    git clone $url
    cd hiredis    
else
    cd hiredis
    git pull
fi

mkdir -p build
cd build
cmake -DCMAKE_INSTALL_PREFIX=$NEMO/opt ..

make install

echo hiredis $version `date` >> $NEMO/opt/mknemo.log
